{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block menu %}
  {% include 'admin/menu.html.twig'%}
{% endblock %}

{% block body %}
  <div class="row">
    {% for product in products %}
      <ul>
        <li>
          <span>
            {{product.name}}
          </span>
          <span>
            {{product.price}}
          </span>
          <a href="/admin/products/delete/{{product.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
          <a href="/admin/products/update/{{product.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        </li>
      </ul>
    {% endfor %}
  </div>
{% endblock %}

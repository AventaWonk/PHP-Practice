{% extends 'base.html.twig' %}

{% block title %}Roles{% endblock %}

{% block menu %}
  {% include 'admin/menu.html.twig'%}
{% endblock %}

{% block body %}
  <div class="row">
    {% for role in roles %}
      <ul>
        <li>
          <span>
            {{role.name}}
          </span>
          <a href="/admin/roles/delete/{{role.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
          <a href="/admin/roless/update/{{role.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        </li>
      </ul>
    {% endfor %}
  </div>
  <div class="row">
    <a href="/admin/roles/add/"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Add</a>
  </div>
{% endblock %}

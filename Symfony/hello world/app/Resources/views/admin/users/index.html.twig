{% extends 'base.html.twig' %}

{% block title %}Add user{% endblock %}

{% block menu %}
  {% include 'admin/menu.html.twig'%}
{% endblock %}

{% block body %}
  <div class="row">
    {% for user in users %}
      <ul>
        <li>
          <span>
            {{user.username}}
          </span>
          <span>
            {{user.email}}
          </span>
          <a href="/admin/users/delete/{{user.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
          <a href="/admin/users/update/{{user.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        </li>
      </ul>
    {% endfor %}
  </div>
  <div class="row">
    <a href="/admin/users/add/"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Add</a>
  </div>
{% endblock %}
